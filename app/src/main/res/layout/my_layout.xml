<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="?attr/titleBarColor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="6dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/register_back"
            />
        <ImageButton
            android:background="@null"
            android:visibility="invisible"
            android:padding="14dp"
            android:src="?attr/imageValue"
            android:onClick="changeTheme"
            android:scaleType="centerInside"
            android:layout_width="44dp"
            android:layout_height="44dp" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="name"
            style="@style/title_text"
            android:textColor="?attr/textColor"
            android:gravity="center"
            />
        <ImageButton
            android:background="@null"
            android:id="@+id/imagebtn"
            android:padding="14dp"
            android:src="?attr/imageValue"
            android:onClick="changeTheme"
            android:scaleType="centerInside"
            android:layout_width="44dp"
            android:layout_height="44dp" />
        <ImageView
            android:id="@+id/iv_set"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/setting"
            />
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_head"
        android:layout_width="80dp"
        android:layout_height="80dp"
        fresco:placeholderImage="@drawable/main_head"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:id="@+id/fans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp"
        android:background="?attr/titleBarColor"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:textSize="20sp"
            android:textColor="?attr/textColor"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="0"
            android:textSize="20sp"
            android:textColor="?attr/textColor"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal"
            android:padding="6dp"
            android:background="?attr/titleBarColor"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:textSize="20sp"
                android:textColor="?attr/textColor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="0"
                android:textSize="20sp"
                android:textColor="?attr/textColor"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
<RadioGroup
    android:id="@+id/group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?attr/titleBarColor"
    android:padding="8dp"
    >
    <RadioButton
        android:id="@+id/rb_contribute"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="投稿"
        android:textSize="25sp"
        android:textColor="@color/set_color"
        android:gravity="center"
        android:checked="true"
        android:button="@null"
        />
    <RadioButton
        android:id="@+id/rb_collect"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="收藏"
        android:textSize="25sp"
        android:textColor="@color/set_color"
        android:gravity="center"
        android:button="@null"
        />
    <RadioButton
        android:id="@+id/rb_comment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="评论"
        android:textSize="25sp"
        android:textColor="@color/set_color"
        android:gravity="center"
        android:button="@null"
        />
</RadioGroup>
    <FrameLayout
        android:id="@+id/vp_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/textBackground"
        >
    </FrameLayout>
</LinearLayout>